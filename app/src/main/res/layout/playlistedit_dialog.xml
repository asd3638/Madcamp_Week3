<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30sp"
        android:layout_marginVertical="10sp"
        android:orientation="horizontal"
        android:id="@+id/id_layout"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:gravity="left"
            android:layout_gravity="bottom"
            android:textSize="15sp"
            android:text="Playlist"
            android:textColor="@color/black"
            android:fontFamily="@font/maruburi_regular"
            android:src="@drawable/playlist"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textSize="15sp"
            android:id="@+id/et_pl_ed"
            android:textColor="@color/black"
            android:background="@android:color/transparent"
            android:fontFamily="@font/maruburi_regular"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30sp"
        android:layout_marginVertical="10sp"
        android:orientation="horizontal"
        android:id="@+id/password_layout"
        android:layout_below = "@id/id_layout">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:gravity="left"
            android:layout_gravity="bottom"
            android:textSize="15sp"
            android:text="description"
            android:textColor="@color/black"
            android:src="@drawable/description"
            android:fontFamily="@font/maruburi_regular"/>

        <EditText
            android:id="@+id/et_dc_ed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@android:color/transparent"
            android:fontFamily="@font/maruburi_regular"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10sp"
        android:orientation="horizontal"
        android:id="@+id/buttons_layout"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="10sp"
        android:layout_marginTop="100sp"
        android:layout_below="@id/password_layout">

        <ImageButton
            android:layout_height="35dp"
            android:layout_width="50dp"
            android:layout_weight="1"
            android:id="@+id/pled_edit_button"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:text="edit"
            android:textSize="15sp"
            android:fontFamily="@font/maruburi_regular"
            android:src="@drawable/edit"
            android:scaleType="fitCenter"
            />
        <ImageButton
            android:layout_height="35dp"
            android:layout_width="50dp"
            android:layout_weight="1"
            android:id="@+id/pled_delete_button"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:text="edit"
            android:textSize="15sp"
            android:fontFamily="@font/maruburi_regular"
            android:src="@drawable/delete"
            android:scaleType="fitCenter"
            />
        <ImageButton
            android:layout_height="35dp"
            android:layout_width="50dp"
            android:layout_weight="1"
            android:id="@+id/pled_cancel_button"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:text="edit"
            android:textSize="15sp"
            android:fontFamily="@font/maruburi_regular"
            android:src="@drawable/cancel"
            android:scaleType="fitCenter"
            />


    </LinearLayout>

</RelativeLayout>


